<p id="notice"><%= notice %></p>

<h1>Available Products</h1>
<% if @products.empty? %>
  <p>
    No products in stock
  </p>
<% end %>
<table id='table1'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><a href="/cart/<%= product.id %>", class='btn btn-success btn-xs'> Add To Cart</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path%>
